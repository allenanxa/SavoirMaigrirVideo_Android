<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/button_orange_roundedcorners</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LandingButton">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LandingButtonAccount">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LandingImage">
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="LandingImageAccount">
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="RecipeBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MonCompteHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>

    <style name="MonCompteItems">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#c0c0c0</item>
    </style>

    <style name="MonCompteItemsSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#c0c0c0</item>
    </style>

    <style name="RepasHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="RepasMenuTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff9900</item>
    </style>

    <style name="RepasContent">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#868686</item>
    </style>

    <style name="RepasRelatedRecipe">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RepasRelatedRecipeContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#497ba1</item>
    </style>

    <style name="RepasFooter">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="btnStyleOrangeSmall" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button_orange_borderless</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>


    </style>

    <style name="txtBilanNote">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_gray_text_bilan</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="txtBilanPersonalInfo">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/gray_text_bilan</item>
    </style>

    <style name="txtBilanGender">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_text_bilan</item>
    </style>

    <style name="darkGrayNormalMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="coachingArchiveWeekNumber">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
